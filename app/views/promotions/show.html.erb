<h1 class="font-bold text-4xl text-gray-600 text-center">Promotions</h1>
<div class="flex flex-col">
  <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
      <div class="overflow-hidden">
        <table class="min-w-full text-left text-sm font-light">
          <thead class="border-b bg-neutral-800 font-medium text-white dark:border-neutral-500 dark:bg-neutral-900">
          <tr>
            <th scope="col" class="px-6 py-4">Name</th>
            <th scope="col" class="px-6 py-4">Start</th>
            <th scope="col" class="px-6 py-4">Finish</th>
            <th scope="col" class="px-6 py-4">Teacher</th>
            <th scope="col" class="px-6 py-4">Edit</th>
          </tr>
          </thead>
          <tbody id="lecture">
          <%= render @promotion %>
          </tbody>
        </table>
        <div>
          <div class="flex flex-row">
            <%= link_to "Back to promotions", promotions_path, class: "bg-blue-500 hover:bg-blue-700 text-black font-bold py-2 px-4 rounded"  %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" width="2em" height="2em" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 15L3 9m0 0l6-6M3 9h12a6 6 0 010 12h-3" />
            </svg>
          </div>

          <div class="flex flex-row">
            <%= link_to "Edit this promotion", edit_promotion_path(@promotion), class: "bg-blue-500 hover:bg-blue-700 text-black font-bold py-2 px-4 rounded" %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" width="2em" height="2em"  viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
            </svg>
          </div>

          <div class="flex flex-row">
            <%= button_to "Destroy this promotion", @promotion, method: :delete,class: "bg-blue-500 hover:bg-blue-700 text-black font-bold py-2 px-4 rounded"  %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" width="2em" height="2em" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
            </svg>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
